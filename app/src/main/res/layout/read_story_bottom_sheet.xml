<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg">

    <TextView
        android:id="@+id/story_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="17dp"
        android:textColor="@color/text_color"
        android:text="Ivan Ivanov"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/dialog_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_close_24"
        android:background="@color/white_background_color"
        app:tint="@color/text_color"
        android:padding="10dp"
        android:layout_marginTop="7dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"/>

    <com.rishabhharit.roundedimageview.RoundedImageView
        android:id="@+id/story_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/image_shape"
        android:scaleType="centerCrop"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/story_from"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/wall"
        app:cornerRadius="10dp"
        app:roundedCorners="topLeft|topRight|bottomLeft|bottomRight" />


    <TextView
        android:id="@+id/story_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/story_image"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="17dp"
        android:text="Title"
        android:textColor="@color/text_color"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_btm_shed_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/story_image"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="40dp"
        android:textColor="@color/date_color_text"
        android:textSize="14sp"
        tools:text="2 days ago" />

    <View
        android:id="@+id/stroke"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/story_title"
        android:layout_marginTop="10dp"
        android:background="@color/divider_color" />


    <TextView
        android:id="@+id/story_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/story_title"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:textColor="@color/text_color"
        android:text="text of story text of story text of story text of story text of story text of story text of story text of story"
        android:textSize="16sp" />

</RelativeLayout>